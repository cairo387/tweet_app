<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= attachment_image_tag(@user, :image, format:"jpeg") %>
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user == @current_user%>
        <%= link_to "編集する", edit_user_path(@user) %>
      <% end %>
    </div>
    <ul class="user-tabs">
      <li class="active"><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    </ul>
    <% @user.posts.each do |post|%>
      <div class="posts-index-item">
        <div class="post-left">
          <%= attachment_image_tag(post.user, :image, format:'jpeg') %>
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to post.user.name, user_path(post.user)%>
          </div>
        <%= link_to post.content, post_path(post) %>
        </div>
      </div>
    <% end %>
  </div>
</div>