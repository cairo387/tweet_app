<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <div class="form">
      <div class="form-body">
        <%= form_with model:@post, local:true do |f| %>
        <%= render "layouts/error_messages", model: f.object %>
          <%= f.text_field :content, autofocus: true, autocomplete: "title", class:"textarea"  %>
          <%= f.submit "編集する", class:"submit"%>
        <% end %>
      </div>
    </div>
  </div>
</div>